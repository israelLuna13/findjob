extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div.py-5
        h1.text-center.text.4xl.font-extrabold 
        div(class="flex flex-col md:flex-row items-center py-5 gap-4 text-gray-800")
            h2(class="text-sm uppercase text-gray-800 font-bold p-3 bg-white rounded-xl") Filter jobs

            div(class="w-full md:w-auto flex items-center gap-1")
                lab(for="categorias" class="text-sm w-24 uppercase text-white font-bold") Categorys
                select(id="categorys" class="flex-1 bg-gray-200 w-full px-2 py-2 border border-gray-300 rounded-md shadow appearance-none") 
                    option(value="") - Seleccione -
                    each category in categorys 
                        option(value=category.id)= category.name
            div(class="w-full md:w-auto flex items-center gap-1")
                lab(for="precios" class="text-sm w-20 uppercase text-white font-bold") Salary
                select(id="prices" class="flex-1 bg-gray-200 w-full px-2 py-2 border border-gray-300 rounded-md shadow appearance-none") 
                    option(value="") - Seleccione -
                    each price in prices 
                       option(value=price.id)= price.name
            div(class="w-full md:w-auto flex items-center gap-1")
                lab(for="precios" class="text-sm w-20 uppercase text-white font-bold") Skill
                select(id="skills" class="flex-1 bg-gray-200 w-full px-2 py-2 border border-gray-300 rounded-md shadow appearance-none") 
                    option(value="") - Seleccione -
                    each skill in skills 
                       option(value=skill.id)= skill.name


        div(id="map-home" class="h-[600px] mt-5")

        section.py-5
            h2(class="text-center text-4xl font-extrabold pt-10 text-white") Available jobs

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each job in jobs
                    include ./templates/card


block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapHome.js")