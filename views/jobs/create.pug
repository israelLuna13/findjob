extends ../layout/index
block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center.text-white Find 
            span.font-normal Job
        h2.text-center.text-2xl.font-extrabold.text-white= page
        div(class='bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10')
            form.space-y-8
                
                .space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Information 
                    p.text-gray-600 Add information about job
                    div 
                        label.block.text-sm.uppercase.text-gray-800.mb-2.font-bold(for="titulo") Title job 
                        input#titulo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Titulo propiedad" type="text" name="titulo")  
                    div 
                        label.block.text-sm.uppercase.text-gray-800.mb-2.font-bold(for="description") Description job 
                        textarea#description.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="text" name="description")  
                    
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        
                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-800.mb-2.font-bold(for="categoria") Category
                            select#categoria.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="categoria")  
                                option(value="") - Seleccione -
                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-800.mb-2.font-bold(for="precio") Precio
                            select#precio.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="precio")  
                                option(value="") - Seleccione -
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        
        
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-800.mb-2.font-bold(for="baseDatos") Base de datos
                            div.flex.flex-col
                                label
                                    input(type="checkbox" name="baseDatos" value="mysql")
                                    | MySQL
                                label
                                    input(type="checkbox" name="baseDatos" value="postgresql")
                                    | PostgreSQL
                                label
                                    input(type="checkbox" name="baseDatos" value="mongodb")
                                    | MongoDB
                                label
                                    input(type="checkbox" name="baseDatos" value="sqlite")
                                    | SQLite
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-800.mb-2.font-bold(for="baseDatos") Base de datos
