extends ../layout/admin
block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content=csrfToken)

block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-white Find 
            span.font-normal.text-white Job
        h2.text-center.text-2xl.font-extrabold.text-white= page

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                      p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        div(class='bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10')
            form(id='imagen' class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center"  method="POST" action=`/jobs/add-resume/${job.id}`)
                 input(type="hidden" name="_csrf" value=csrfToken)
            input(class="mt-5 w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded-sm text-white font-bold uppercase cursor-pointer" type="submit" value="Add resume")

block scripts
    script(src="/js/addResume.js")