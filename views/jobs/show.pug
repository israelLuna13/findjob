extends ../layout/app
block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
block contenido
    div(class="py-5")
        h1(class="text-4xl my font-extrabold text-center text-white")= job.title 
        div
            a(href="#" class="font-bold text-white text-sm.text-white") Category: 
                span(class="font-normal")= job.category.name 
        div(class="mt-5 md:flex md:gap-4")
            div(class="md:w-2/3 bg-white shadow rounded-lg") 
                div(class="px-5 py-10 space-y-5")
                    h2(class="text-2xl leading-6 font-bold text-gray-900") Information about job

                    div(class="grid grid-cols-1 md:grid-cols-2")
                        p(class="text-gray-600 font-bold text-xs") Skills 
                            span(class="text-gray-800 block text-lg")= job.skill.name
        
                        p(class="text-gray-600 font-bold text-xs") Price 
                            span(class="text-gray-800 block text-lg")= job.price.name
                        p(class="text-gray-600 font-bold text-xs") Language 
                            span(class="text-gray-800 block text-lg")= job.language
                        p(class="text-gray-600 font-bold text-xs") Shift 
                            span(class="text-gray-800 block text-lg")= job.shift

                            div(class="px-5 py-10 space-y-5")
                                h2(class="text-2xl leading-6 font-bold text-gray-900") Benefit
                                p= job.benefit

                            div(class="px-5 py-10 space-y-5")
                                h2(class="text-2xl leading-6 font-bold text-gray-900") Description
                                p= job.description
            div(class="md:w-1/3")
                h3(class="text-center py-10 leading-6 text-2xl font-bold text-white") Ubicacion 
                div(class="h-96" id="mapa")
                    p(id="lat" class="hidden")=job.lat 
                    p(id="lng" class="hidden")=job.lng
                div(class="p-5")
                    p(class="text-white font-bold text-xs") Direction 
                        span(id="calle" class="text-white block text-lg")= job.calle
block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/showMap.js")

