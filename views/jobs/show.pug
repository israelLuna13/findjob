extends ../layout/app
block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
block contenido
    div(class="py-5")
        h1(class="text-4xl my font-extrabold text-center text-white")= job.title 
        div
            a(href="#" class="font-bold text-white text-sm.text-white") Category: 
                span(class="font-normal")= job.category.name 
        div(class="mt-5 md:flex md:gap-4 md:items-start")
            div(class="md:w-2/3 bg-white shadow rounded-lg") 
                div(class="px-5 py-10 space-y-5")
                    h2(class="text-2xl leading-6 font-bold text-gray-900") Information about job

                    div(class="grid grid-cols-1 md:grid-cols-2 gap-4")
                        p(class="text-gray-600 font-bold text-xs") Skills 
                            span(class="text-gray-800 block text-lg")= job.skill.name
                        p(class="text-gray-600 font-bold text-xs") Salary 
                            span(class="text-gray-800 block text-lg")= job.price.name
                        p(class="text-gray-600 font-bold text-xs") Language 
                            span(class="text-gray-800 block text-lg")= job.language.name
                        p(class="text-gray-600 font-bold text-xs") Type of employment 
                            span(class="text-gray-800 block text-lg")= job.shift.name

                            div(class="px-5 py-10 space-y-5")
                                h2(class="text-2xl leading-6 font-bold text-gray-900") Benefit
                                p= job.benefit

                            div(class="px-5 py-10 space-y-5")
                                h2(class="text-2xl leading-6 font-bold text-gray-900") Description
                                p= job.description
            aside(class="md:w-1/3 bg-gray-800 shadow rounded-lg flex flex-col")
                h3(class="text-center py-11 leading-6 text-2xl font-bold text-white") Location 
                div(class=" h-96" id="mapa")
                    p(id="lat" class="hidden")=job.lat 
                    p(id="lng" class="hidden")=job.lng
                div(class="p-5")
                    p(class="text-white font-bold text-xs") Address 
                        span(id="calle" class="text-white block text-lg")= job.calle

                if !isEmployer
                    h3(class="text-2xl text-center my-10 font-extrabold text-white") Employer

                    if user
                        if aplicated
                            h3(class="text-2xl text-center my-10 font-extrabold text-white") You have already applied here
                        else 
                            a(href=`/jobs/add-resume/${job.id}` class=" text-white font-bold uppercase text-sm cursor-pointer py-2 px-10 rounded-sm bg-blue-600 block mx-auto text-center") Apply to the job

                    else
                        div(class="flex flex-col items-center justify-center gap-2")
                            p.text-center.text-white If you want to upload your resume 
                            a(href="/auth/register" class="text-blue-600") you most create an accunt or login

block scripts
