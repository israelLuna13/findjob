extends ../layout/admin
block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-white Find 
            span.font-normal Job
        h2.text-center.text-2xl.font-extrabold.text-white= page
        a(href="/jobs/create" class="rounded py-2 bg-blue-600 hover:bg-blue-700 text-sm px-10 font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Make post
        if jobs.length 
            div(class=" bg-gray-800 shadow rounded-lg max-w-screen-lg mx-auto")
                div(class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 gap-6")
                    each job in jobs 
                        div(class="bg-white shadow p-6 rounded-lg")
                            a(class="block text-xl font-extrabold text-blue-600 truncate mb-2" href=`/job/${job.id}`)= job.title
                            p(class="w-min px-2 py-1 text-xs leading-5 font-semibold rounded bg-blue-100 text-blue-800")= job.skill.name
                            p(class="text-sm text-black font-bold mb-2")= job.description
                            p(class="text-sm text-black font-bold mb-2")= job.company
                            p(class="text-sm text-black font-bold mb-2")= job.category.name
                            p(class="text-sm text-gray-500 font-bold flex items-center mb-4") 
                                svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5")
                                    path(stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z")=job.price.name
                            
                            div(class="flex gap-2 mt-4")
                                form(action="")
                                    input(type="submit" class=`w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer ${job.published ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'}`  value=`${job.published ? 'publicado':'No publicado'}`) 
                                a(href=`/jobs/edit/${job.id}` class="text-center px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-blue-100 text-blue-800") Editar
                                form(action=`/jobs/delete/${job.id}` method="POST")
                                    input(type="hidden" name="_csrf" value=csrfToken)
                                    input(type="submit" class=`w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-red-100 text-red-800`  value="Eliminar") 

        else 
            p.text-center.text-white There is not jobs
