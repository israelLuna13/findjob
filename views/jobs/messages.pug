extends ../layout/admin
block contenido
    h2(class="text-2xl font-extrabold text-center my-10 text-white" )= page
    
    a(href="/my-jobs" class="rounded py-2 bg-blue-600 hover:bg-indigo-700 text-sm px-10 font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Back
    div(class="mx-auto max-w-4xl bg-gray-800 shadow")
        if message.length
            ul
                each messa in message
                    li(class="border-gray-800 border-b p-5")
                    p(class="font-bold text-white") Name: 
                        span(class="font-normal")= messa.user.name
                    p(class="font-bold text-white") Email: 
                        span(class="font-normal")= messa.user.email
                    p(class="font-bold text-white") message: 
                        span(class="font-normal")= messa.message
                    p(class="font-bold text-white") Enviado:
                        span(class="font-normal")= formatearFecha(messa.createdAt)
        else
            p(class="text-center text-white") There is not message