extends ../layout/admin
block contenido
    h2(class="text-2xl font-extrabold text-center my-10 text-white" )= page
    
    a(href="/my-jobs" class="rounded py-2 bg-blue-600 hover:bg-indigo-700 text-sm px-10 font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Back
    div(class="mx-auto max-w-4xl bg-gray-800 shadow")
        if resume.length
            ul
                each resum in resume
                    div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-8-y md:space-y-0 gap-4")
                        div(class="bg-white w-full rounded-xl")
                            li(class="border-gray-800 border-b p-2 ")
                                a(href=`/uploads/${resum.resume}` target="_blank" rel="noopener noreferrer") Look resume 
                            div(class="m-5")
                                p(class="font-bold text-black m-2") Name: 
                                    span(class="font-normal")= resum.user.name
                                p(class="font-bold text-black m-2") Email: 
                                    span(class="font-normal")= resum.user.email
                                p(class="font-bold text-black m-2") Enviado:
                                    span(class="font-normal")= formatearFecha(resum.createdAt)
        else
            p(class="text-center text-white") There is not resumes