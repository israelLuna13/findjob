extends ../layout/index
block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center.text-white Find 
            span.font-normal Job
            div(class="flex justify-center py-2")
              img(src="/img/lupa.png", alt="logo")
        h2.text-center.text-2xl.font-extrabold.text-white= page

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                      p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg
        div(class="mt-8 mx-auto max-w-md") 
            div(class="bg-white py-8 px-4 shadow rounded-2xl")
             form.space-y-5(method="POST" action="/auth/login")
                input(type="hidden" name="_csrf" value=csrfToken)

               
                div 
                    label.block.text-sm.uppercase.text-gray-800.mb-2.font-bold(for="email") Email 
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")    
                div 
                    label.block.text-sm.uppercase.text-gray-800.mb-2.font-bold(for="password") password
                    input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu password" type="password" name="password")    
                div(class="flex items-center justify-between")
                    a.text-gray-500.text-xs(href="/auth/register") Don't have an account? Create one
                    a.text-gray-500.text-xs(href="/auth/change-password") Forgot your password?
               
                input(class ="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Login") 